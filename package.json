{
  "name": "schema-typed",
  "version": "0.2.0",
  "description": "Schema for data modeling & validation",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --fix '{src,test}/**/*.js'",
    "prettier": "prettier --write '{src,test}/**/*.js'",
    "clean": "rm -rf lib/ coverage/",
    "build": "npm run clean && babel -d lib/ src/",
    "test-watch": "jest --watch",
    "test-once": "jest",
    "test-coverage": "jest --coverage",
    "test": "npm run lint && npm run test-once",
    "prepublish": "npm run lint && npm run prettier && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsuite/schema-typed.git"
  },
  "keywords": [
    "schema",
    "validation"
  ],
  "contributors": [
    "A2ZH",
    "Simon Guo <simonguo.2009@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rsuite/schema-typed/issues"
  },
  "files": [
    "src",
    "lib"
  ],
  "homepage": "https://github.com/rsuite/schema-typed#readme",
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-es2015-classes": "^6.14.0",
    "babel-plugin-transform-proto-to-assign": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "husky": "^1.0.0-rc.14",
    "istanbul": "^0.4.5",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "object-flaser": "^0.1.1",
    "prettier": "^1.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "/docs/",
      "/examples?/",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@storybook/.*\\.vue$))"
    ],
    "moduleFileExtensions": [
      "vue",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "bail": true
  }
}
